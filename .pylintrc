[MASTER]
ignore=CVS
ignore-patterns=
persistent=yes
load-plugins=
jobs=4

[MESSAGES CONTROL]
confidence=
disable=C0111

[REPORTS]
output-format=text
reports=yes
evaluation=10.0 - ((float(5 * error + warning + refactor + convention) / statement) * 10)

[FORMAT]
max-line-length=100
single-line-if-stmt=no
indent-string='    '
max-module-lines=1000

[LOGGING]
logging-modules=logging

[MISCELLANEOUS]
notes=FIXME,XXX,TODO

[VARIABLES]
init-import=no
dummy-variables-rgx=_$|dummy

[DESIGN]
max-args=5
max-locals=15
max-returns=6
max-branches=12
max-statements=50
max-parents=7
max-attributes=7
min-public-methods=2
max-public-methods=20

[EXCEPTIONS]
overgeneral-exceptions=builtins.Exception
